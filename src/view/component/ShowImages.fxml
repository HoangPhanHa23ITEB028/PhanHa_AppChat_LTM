<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>

<AnchorPane fx:id="fileFormat" 
            prefHeight="160.0" prefWidth="163.0"
            style="-fx-background-color: transparent; -fx-border-width: 0;"
            xmlns="http://javafx.com/javafx/24.0.1" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="controller.render.FileRenderMessage">

    <children>
        <!-- Container hiển thị ảnh, có bo góc -->
        <StackPane AnchorPane.topAnchor="0.0" 
                   AnchorPane.bottomAnchor="0.0"
                   AnchorPane.leftAnchor="0.0" 
                   AnchorPane.rightAnchor="0.0"
                   style="-fx-background-radius: 15; -fx-background-color: transparent;">

            <ImageView fx:id="ImagesView" 
                       fitWidth="163.0"
                       fitHeight="160.0"
                       preserveRatio="true"
                       smooth="true"
                       pickOnBounds="true"
                       visible="false"
                       style="-fx-background-radius: 15; -fx-clip: true;"/>
        </StackPane>
    </children>
</AnchorPane>
